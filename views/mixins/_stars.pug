mixin stars(value = 0, mode = "active")

  - const disabled = mode === "disable" ? true : false;
  - const ratingClass = mode === "disable" ? "" : "rating__group--active";

  .rating__group(class=ratingClass)
    input.rating__input.rating__input--none(checked name="rating" id="rating-0" value="0" disabled=(disabled) type="radio")
    label(aria-label="0 stars" class="rating__label" for="rating-0") &nbsp;

    label(aria-label="0.5 stars" class="rating__label rating__label--half" for="rating-05")
      svg.rating__icon.rating__icon--star
        != h.icon('star-half')
    input.rating__input(name="rating" id="rating-05" value="0.5" type="radio" disabled=(disabled) checked=(value === 0.5))

    label(aria-label="1 star" class="rating__label" for="rating-10")
      svg.rating__icon.rating__icon--star
        != h.icon('star')
    input.rating__input(name="rating" id="rating-10" value="1" type="radio" disabled=(disabled) checked=(value === 1))

    label(aria-label="1.5 stars" class="rating__label rating__label--half" for="rating-15")
      svg.rating__icon.rating__icon--star
        != h.icon('star-half')
