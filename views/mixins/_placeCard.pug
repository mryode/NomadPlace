mixin placeCard(place={})
  .place__card

    .place__header

      h3
        a(href=`/place/${place.slug}`) #{place.name}

      .place__tags
        each t, index in place.tags
          a(href=`/tags/${t}`) #{t}
          if index < place.tags.length - 1
            span #{", "}

    .place__info #{place.description}
      a(href=`/place/${place.slug}`) Read more!

    //- actions
      .place__actions
        .place__action--edit
          button
            != h.icon('pencil')
        .place__action--like
          button
            != h.icon('heart')
        .place__action--review
          button
            != h.icon('review')

    .color-overlay
    .gradient-overlay